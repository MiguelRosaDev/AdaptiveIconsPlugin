<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
           id="com.cordova.plugin.AdaptiveIconsPlugin"
      version="1.0">
    
    <name>Cordova Adaptive Icons Plugin</name>

    <resources>
      <color name="background">#0ca569</color>
    </resources>
           
<platform name="android">
    <icon src="res/mipmap-ldpi-v4/ic_launcher.png" density="ldpi" />
    <icon src="res/mipmap-mdpi-v4/ic_launcher.png" density="mdpi" />
    <icon src="res/mipmap-hdpi-v4/ic_launcher.png" density="hdpi" />
    <icon src="res/mipmap-xhdpi-v4/ic_launcher.png" density="xhdpi" />
    <icon src="res/mipmap-xxhdpi-v4/ic_launcher.png" density="xxhdpi" />
    <icon src="res/mipmap-xxxhdpi-v4/ic_launcher.png" density="xxxhdpi" />
</platform>
           
</plugin>
